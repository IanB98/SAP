<head>
  <%= render "layouts/header"%>
</head>

<body>
  <h1>User</h1>

  <p>Email: <%= @user.email %></p>

  <p>Role: <%= @user.role %></p>

  <% if current_user.admin? %>
  <li><%= link_to "Delete", user_path(@user), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
  <% end %>
</body>

<footer>
  <%= render "layouts/footer"%>
</footer>